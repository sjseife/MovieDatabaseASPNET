    </dl>
</div>
<div class="col-md-offset-1">

    <button onclick="rewatch()">Watch Again</button>
    <button onclick="backToList()">Back to list</button>

</div>
@section Scripts{
    <script>


        function rewatch() {
            var link = @Html.Raw(Json.Encode(Model.IMDBUrl));

                window.location.href = link;
        }
        function backToList() {
            window.location.href = "/movie/purchasedlist/";
        }
    </script>
}